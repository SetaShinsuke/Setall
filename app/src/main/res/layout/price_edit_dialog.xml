<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mTvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/price_init"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/mEtPriceInit"
        app:layout_constraintEnd_toStartOf="@+id/mEtPriceInit"
        android:layout_marginEnd="0dp"
        tools:layout_editor_absoluteY="30dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <EditText
        android:id="@+id/mEtPriceInit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mEtPriceFinal"
        android:layout_marginStart="0dp"/>

    <TextView
        android:id="@+id/mTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/price_purchased"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/mEtPriceFinal"/>

    <EditText
        android:id="@+id/mEtPriceFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mTitle2"
        app:layout_constraintTop_toBottomOf="@+id/mEtPriceInit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
